<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <!-- バニラの調理系設備に煮沸レシピを追加する -->
  <Operation Class="PatchOperationAdd">
    <xpath>*/ThingDef[defName = "ElectricStove"]/recipes</xpath>
    <value>
      <li>Mizu_PurifyWater</li>
      <li>Mizu_BoilRawWater</li>
      <li>Mizu_PurifyWaterMulti</li>
      <li>Mizu_BoilRawWaterMulti</li>
    </value>
  </Operation>
  <Operation Class="PatchOperationAdd">
    <xpath>*/ThingDef[defName = "FueledStove"]/recipes</xpath>
    <value>
      <li>Mizu_PurifyWater</li>
      <li>Mizu_BoilRawWater</li>
      <li>Mizu_PurifyWaterMulti</li>
      <li>Mizu_BoilRawWaterMulti</li>
    </value>
  </Operation>
  <Operation Class="PatchOperationAdd">
    <xpath>*/ThingDef[defName = "Campfire"]/recipes</xpath>
    <value>
      <li>Mizu_PurifyWater</li>
      <li>Mizu_BoilRawWater</li>
      <li>Mizu_PurifyWaterMulti</li>
      <li>Mizu_BoilRawWaterMulti</li>
    </value>
  </Operation>

  <!-- 作業場にreciepsが無いなら追加する -->
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationTest">
        <xpath>*/ThingDef[defName = "CraftingSpot"]/recipes</xpath>
        <success>Invert</success>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>*/ThingDef[defName = "CraftingSpot"]</xpath>
        <value>
          <recipes/>
        </value>
      </li>
    </operations>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>*/ThingDef[defName = "CraftingSpot"]/recipes</xpath>
    <value>
      <li>Mizu_MakeShavedIce</li>
    </value>
  </Operation>
  
</Patch>
