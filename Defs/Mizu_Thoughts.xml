<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThoughtDef>
    <defName>Mizu_NeedWater</defName>
    <workerClass>MizuMod.ThoughtWorker_NeedWater</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>slightly thirsty</label>
        <description>I'm slightly thirsty.</description>
        <baseMoodEffect>-1</baseMoodEffect>
      </li>
      <li>
        <label>thirsty</label>
        <description>I'm really thirsty.</description>
        <baseMoodEffect>-8</baseMoodEffect>
      </li>
      <li>
        <label>urgently thirsty</label>
        <description>These thirst pangs are hard to ignore.</description>
        <baseMoodEffect>-14</baseMoodEffect>
      </li>
      <li>
        <label>dehydrating (trivial)</label>
        <description>It's been so long since I drank.</description>
        <baseMoodEffect>-22</baseMoodEffect>
      </li>
      <li>
        <label>dehydrating (minor)</label>
        <description>I can feel my body wasting away.</description>
        <baseMoodEffect>-29</baseMoodEffect>
      </li>
      <li>
        <label>dehydrating (moderate)</label>
        <description>I can barely think about anything but water.</description>
        <baseMoodEffect>-36</baseMoodEffect>
      </li>
      <li>
        <label>dehydrating (severe)</label>
        <description>I can barely move or think about anything but water.</description>
        <baseMoodEffect>-42</baseMoodEffect>
      </li>
      <li>
        <label>dehydrating (extreme)</label>
        <description>Water... water... just a shot to drink... anything... please...</description>
        <baseMoodEffect>-50</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>Mizu_DrankClearWater</defName>
    <durationDays>0.5</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>drank clear water</label>
        <description>I drank clear water. It's tasty good.</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>Mizu_DrankMudWater</defName>
    <durationDays>0.5</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>drank mud water</label>
        <description>I drank unfiltered mud water. so terrible taste!</description>
        <baseMoodEffect>-6</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>Mizu_DrankSeaWater</defName>
    <durationDays>0.5</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>drank sea water</label>
        <description>I drank unfiltered sea water. so terrible and salty taste!</description>
        <baseMoodEffect>-6</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>Mizu_DrankScoopedWater</defName>
    <durationDays>0.5</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>drank scooped water</label>
        <description>I drank scooped water by hand. I want a cup.</description>
        <baseMoodEffect>-4</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>Mizu_SippedWaterLikeBeast</defName>
    <durationDays>0.5</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>sipped water from nature</label>
        <description>I have no choice but to sip water like beasts.</description>
        <baseMoodEffect>-8</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>Mizu_AteIcyFoodInHotSeason</defName>
    <durationDays>0.5</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>ate icy food in hot season</label>
        <description>I ate icy food in hot seadon. It's so cool!</description>
        <baseMoodEffect>2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
</Defs>