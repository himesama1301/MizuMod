<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <NeedDef>
    <defName>Mizu_Water</defName>
    <needClass>MizuMod.Need_Water</needClass>
    <label>Water</label>
    <description>Water is the amount of water a creature has consumed recently. If it is at zero, a creature will become increasingly dehydrated and eventually die.</description>
    <listPriority>700</listPriority>
    <major>true</major>
    <showForCaravanMembers>true</showForCaravanMembers>
    
    <modExtensions>
      <li Class="MizuMod.DefExtension_NeedWater">
        <fallPerTickBase>1.5E-05</fallPerTickBase>
        <slightlyThirstyBorder>0.6</slightlyThirstyBorder>
        <thirstyBorder>0.24</thirstyBorder>
        <urgentlyThirstyBorder>0.12</urgentlyThirstyBorder>
        <dehydrationSeverityPerDay>0.2</dehydrationSeverityPerDay>
        <fallPerTickFromTempCurve>
          <points>
            <li>0, 0</li>
            <li>100, 1.5E-05</li>
          </points>
        </fallPerTickFromTempCurve>
      </li>
    </modExtensions>
    
  </NeedDef>

</Defs>