<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <WorkGiverDef>
    <defName>Mizu_DoBillWater</defName>
    <label>do water task</label>
    <giverClass>MizuMod.WorkGiver_DoBillWater</giverClass>
    <workType>Mizu_Drawing</workType>
    <priorityInType>100</priorityInType>
    <fixedBillGiverDefs>
      <li>Mizu_DrawingWaterSpot</li>
      <li>Mizu_Well</li>
      <li>Mizu_WaterFaucet</li>
      <li>Mizu_WaterBox</li>
    </fixedBillGiverDefs>
    <verb>do water task</verb>
    <gerund>doing water task at</gerund>
    <requiredCapacities>
      <li>Manipulation</li>
    </requiredCapacities>
    <prioritizeSustains>true</prioritizeSustains>
  </WorkGiverDef>

  <WorkGiverDef>
    <defName>Mizu_DoctorFeedWaterHumanlikes</defName>
