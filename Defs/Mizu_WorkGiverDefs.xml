    <verb>feed (water)</verb>
    <gerund>feeding (water)</gerund>
    <priorityInType>29</priorityInType>
    <requiredCapacities>
      <li>Manipulation</li>
    </requiredCapacities>
    <prioritizeSustains>true</prioritizeSustains>
