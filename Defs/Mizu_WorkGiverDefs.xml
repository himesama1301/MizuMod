      <li>Manipulation</li>
    </requiredCapacities>
    <prioritizeSustains>true</prioritizeSustains>
    <feedHumanlikesOnly>true</feedHumanlikesOnly>
  </WorkGiverDef>
  
  <WorkGiverDef>
    <defName>Mizu_DoctorFeedWaterAnimals</defName>
