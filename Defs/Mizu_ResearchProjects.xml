<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ResearchProjectDef>
    <defName>Mizu_UndergroundWater</defName>
    <label>Underground water</label>
    <description>Make wells, a primitive building for drawing underground water of shallow layer.</description>
    <tab>Mizu_ResearchTab</tab>
    <baseCost>200</baseCost>
    <techLevel>Neolithic</techLevel>
    <tags>
      <li>ClassicStart</li>
    </tags>
    <researchViewX>0</researchViewX>
    <researchViewY>0</researchViewY>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>Mizu_Waterworks</defName>
    <label>Waterworks</label>
    <description>Allows you to build pipe, valve, faucet, tank and some type of pumps.</description>
    <tab>Mizu_ResearchTab</tab>
    <baseCost>500</baseCost>
    <techLevel>Industrial</techLevel>
    <prerequisites>
      <li>Electricity</li>
      <li>Mizu_UndergroundWater</li>
    </prerequisites>
    <researchViewX>1</researchViewX>
    <researchViewY>0</researchViewY>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>Mizu_CleanWater</defName>
    <label>Clearing water</label>
    <description>Allows you to build water purifier.</description>
    <tab>Mizu_ResearchTab</tab>
    <baseCost>300</baseCost>
    <techLevel>Medieval</techLevel>
    <tags>
      <li>ClassicStart</li>
    </tags>
    <researchViewX>0</researchViewX>
    <researchViewY>1</researchViewY>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>Mizu_DeepUndergroundWater</defName>
    <label>Deep underground water</label>
    <description>Allows you to build pump for drawing underground water of deep layer.</description>
    <tab>Mizu_ResearchTab</tab>
    <baseCost>1000</baseCost>
    <techLevel>Industrial</techLevel>
    <prerequisites>
      <li>DeepDrilling</li>
      <li>Mizu_Waterworks</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
    </requiredResearchFacilities>
    <researchViewX>3</researchViewX>
    <researchViewY>0</researchViewY>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>Mizu_WaterFilter</defName>
    <label>Water filter</label>
    <description>Allows you to build water filters for waterworks.</description>
    <tab>Mizu_ResearchTab</tab>
    <baseCost>800</baseCost>
    <techLevel>Industrial</techLevel>
    <prerequisites>
      <li>MicroelectronicsBasics</li>
      <li>Mizu_Waterworks</li>
      <li>Mizu_CleanWater</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <researchViewX>2</researchViewX>
    <researchViewY>1</researchViewY>
  </ResearchProjectDef>

</Defs>
